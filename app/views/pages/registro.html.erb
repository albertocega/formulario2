<div class = "jumbotron jumbo">
  <h1 align = "center"> Etapa de registro</h1>
  
  <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      
    <div class="form-group">
      <div class="col-sm-2 control-label"> 
        <%= f.label :nombre %>
      </div>
      <div class="col-sm-10">
          <%= f.text_field :nombre, class: "form-control", placeholder: "Ingresa tu nombre", autofocus: true %>
      </div>
    </div> 
  
    <div class="form-group">
      <div class="col-sm-2 control-label"> 
        <%= f.label :direccion, "Dirección" %>
      </div>
      <div class="col-sm-10">
          <%= f.text_field :direccion, class: "form-control", placeholder: "Ingresa tu dirección", autofocus: true %>
      </div>
    </div> 
  
    <div class="form-group">
      <div class="col-sm-2 control-label"> 
        <%= f.label :telefono, "Teléfono" %>
      </div>
      <div class="col-sm-10">
          <%= f.text_field :telefono, class: "form-control", placeholder: "Ingresa tu télefono", autofocus: true %>
      </div>
    </div> 
    
    <div class="form-group">
      <div class="col-sm-2 control-label"> 
        <%= f.label :correo, "Correo" %>
      </div>
      <div class="col-sm-10">
          <%= f.email_field :correo, class: "form-control", placeholder: "Ingresa tu correo electrónico", autofocus: true %>
      </div>
    </div> 
    
      <div class="form-group">
      <label for="inputCampo3" class="col-sm-2 control-label">Campo</label>
        <div class="col-sm-10">
          <div class="btn-group">
              <%= f.select :campo, options_for_select([
              ["Elige tu campo...", ""], 
              'Asistencia social y atención a desastres', 
              'Deporte y recreación', 
              "Desarrollo social y económico", 
              "Voluntariado", 
              'Investigación',
              'Medio ambiente',
              'Salud',
              'Incidencia en política pública',
              "Educación"]), 
              {}, { class: "form-control" } %>
        </div>
      </div>
    </div>
  
      <div class="form-group">
      <label for="inputCampo3" class="col-sm-2 control-label">Zona</label>
        <div class="col-sm-10">
          <div class="btn-group">
              <%= f.select :zona, options_for_select([
              ["Elige tu zona...", ""], 
              'Ciudad de México', 
              'Morelos', 
              "Michoacan"]), 
              {}, { class: "form-control" } %>
        </div>
      </div>
    </div>
  
    
    <div class="form-group" align = "center">
      
            <%= f.submit("Iniciar MEVS", class: 'btn btn-primary btn-lg') %>
  
    </div>
    
  <%end%>
</div>

